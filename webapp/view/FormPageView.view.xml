<mvc:View controllerName="app.split.controller.FormPageView"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Page title="{i18n>empty}">
    
             <f:SimpleForm id="idSimple2">
            <f:title>
             <core:Title text="Site Details"></core:Title>
            </f:title>
          <Label text="ID"></Label>
                <Input id="idId"></Input>
          <Label text="site"></Label>
                <Input id="idSite"></Input>
           <Label text="ORE"></Label>
                <Input id="idore"></Input>
           <Label text="Date of Mining"></Label>
                 <Input id="idDate" type="Date"></Input>
                 
        
        </f:SimpleForm>
        <footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Submit" type="Accept" press="onPressForm"/>
				
			
			</OverflowToolbar>
            </footer>
    </Page>
</mvc:View>